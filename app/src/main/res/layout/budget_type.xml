<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/budget_type_relativeLayout">


    <TextView
        android:id="@+id/budget_type_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="食品酒水"
        android:textColor="@color/colorblack"
        android:textSize="22dp" />
    <TextView
        android:id="@+id/budget_type_zycmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/budget_type_type"
        android:layout_marginRight="30dp"
        android:textColor="@color/colorblack"
        android:text="10.20" />
    <TextView
        android:id="@+id/budget_type_zyc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支出"
        android:layout_toLeftOf="@+id/budget_type_zycmoney"
        android:layout_alignBottom="@+id/budget_type_type"
        android:textSize="16dp" />

    <ProgressBar
        android:id="@+id/budget_type_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/budget_type_type"
        android:layout_alignRight="@+id/budget_type_zycmoney"
        android:layout_alignLeft="@+id/budget_type_type"/>
    <TextView
        android:id="@+id/budget_type_yusuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预算"
        android:layout_below="@+id/budget_type_progressBar"
        android:layout_alignLeft="@+id/budget_type_type"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/budget_type_yusuanmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未设置"
        android:layout_below="@+id/budget_type_progressBar"
        android:layout_toRightOf="@+id/budget_type_yusuan"
        android:layout_marginLeft="10dp"
        android:textSize="16dp" />

</RelativeLayout>