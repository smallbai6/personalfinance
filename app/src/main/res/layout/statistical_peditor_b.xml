<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/b_statistical_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:text="早午晚餐"
            android:textColor="@color/colorblack"
            android:textSize="22dp" />


        <TextView
            android:id="@+id/b_statistical_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/b_statistical_type"
            android:layout_alignLeft="@+id/b_statistical_type"
            android:text="15:45"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/b_statistical_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/b_statistical_time"
            android:layout_alignLeft="@+id/b_statistical_type"
            android:layout_alignRight="@+id/b_statistical_time"
            android:text="备注"
            android:textSize="16dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/b_statistical_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textSize="20dp"
            android:text="9.00" />
    </RelativeLayout>
</LinearLayout>