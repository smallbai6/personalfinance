<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/detail_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出流水"
                android:textSize="18dp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorblack"
                />


            <TextView
                android:id="@+id/detail_choose_rmd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="季"
                android:textSize="18dp"
                android:textColor="@color/colorblack"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:id="@+id/detail_year_tianjia"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/tianjiatubiao" />
            <ImageView
                android:id="@+id/detail_year_sousuotubiao"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/detail_year_tianjia"
                app:srcCompat="@mipmap/sousuotubiao" />
            <ImageView
                android:id="@+id/detail_year_shengluetubiao"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
               android:layout_toLeftOf="@id/detail_year_sousuotubiao"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/shengluetubiao" />


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorblack"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <View
                android:id="@+id/detail_view"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/detail_year_jieyu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_view"
                android:layout_marginLeft="10dp"
                android:text="年结余"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/detail_year_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_year_jieyu"
                android:layout_alignLeft="@+id/detail_year_jieyu"
                android:text="-17.20"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/detail_year_shouru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收入"
                android:layout_below="@+id/detail_year_money"
                android:layout_alignLeft="@+id/detail_year_money"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/detail_year_incomemoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.00"
                android:textSize="18dp"
                android:layout_below="@id/detail_year_money"
                android:layout_toRightOf="@id/detail_year_shouru"
                android:layout_marginLeft="7dp"/>
            <TextView
                android:id="@+id/detail_year_fengefu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textSize="16dp"
                android:layout_below="@id/detail_year_money"
                android:layout_toRightOf="@id/detail_year_incomemoney"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/detail_year_zhichu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支出"
                android:textSize="18dp"
                android:layout_below="@id/detail_year_money"
                android:layout_toRightOf="@id/detail_year_fengefu"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/detail_year_expendmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18.20"
                android:textSize="18dp"
                android:layout_below="@id/detail_year_money"
                android:layout_toRightOf="@id/detail_year_zhichu"
                android:layout_marginLeft="7dp"/>
        </RelativeLayout>
<View
    android:layout_width="wrap_content"
    android:layout_height="2dp"
    android:background="@color/colorblack"></View>
        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>