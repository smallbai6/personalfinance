<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/financerecorddetail_backimageview"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@mipmap/zuojiantou"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/financerecorddetail_back"
            android:layout_toRightOf="@+id/financerecorddetail_backimageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="交易详情"
            android:textColor="@color/colorblack"
            android:textSize="20dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorblack" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/financerecorddetail_picture"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@+id/financerecorddetail_a"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/financerecorddetail_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="广发基金管理有限公司"

            android:textSize="20dp" />

        <TextView
            android:id="@+id/financerecorddetail_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/financerecorddetail_a"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="200.00元"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:textColor="@color/colorblack"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/financerecorddetail_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/financerecorddetail_b"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="买入成功"
            android:textColor="@color/colorblack"
            android:textSize="16dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorwhitegray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/financerecorddetail_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买入信息"
                android:textColor="@color/colorblack"
                android:textSize="18dp" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/financerecorddetail_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买入产品"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/financerecorddetail_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="买入产品"
                android:textSize="18dp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/financerecorddetail_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买入金额"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/financerecorddetail_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="买入金额"
                android:ellipsize="end"
                android:maxWidth="150dp"
                android:singleLine="true"
                android:textSize="18dp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/financerecorddetail_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买入时间"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/financerecorddetail_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买入时间"
                android:layout_alignParentRight="true"
                android:textSize="18dp"/>

        </RelativeLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorwhitegray" />
    <LinearLayout
        android:id="@+id/financerecorddetail_sureLinearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认信息"
                android:textColor="@color/colorblack"
                android:textSize="18dp" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认金额"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/financerecorddetail_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="确认金额"
                android:ellipsize="end"
                android:maxWidth="150dp"
                android:singleLine="true"
                android:textSize="18dp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认份额"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/financerecorddetail_g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="确认份额"
                android:ellipsize="end"
                android:maxWidth="150dp"
                android:singleLine="true"
                android:textSize="18dp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认时间"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/financerecorddetail_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认时间"
                android:layout_alignParentRight="true"
                android:textSize="18dp"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/financerecorddetail_i"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号"
                android:layout_alignParentRight="true"
                android:textSize="18dp"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>