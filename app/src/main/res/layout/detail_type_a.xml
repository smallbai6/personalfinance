<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/a_detail_relativeLayout">


    <TextView
        android:id="@+id/a_detail_month"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="12月"
        android:textColor="@color/colorblack"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/a_detail_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a_detail_month"
        android:layout_alignLeft="@+id/a_detail_month"
        android:text="2020"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/a_detail_jieyu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结余"
        android:layout_toRightOf="@+id/a_detail_month"
        android:layout_marginLeft="40dp"
        android:layout_alignBottom="@+id/a_detail_totalmoney"

        android:textSize="16dp" />

    <TextView
        android:id="@+id/a_detail_totalmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/a_detail_jieyu"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        android:textColor="@color/colorblack"
        android:text="10.20" />

    <TextView
        android:id="@+id/a_detail_shouru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a_detail_jieyu"
        android:layout_alignLeft="@+id/a_detail_jieyu"
        android:textSize="16dp"
        android:text="收入"
        android:textColor="@color/colorred"/>

    <TextView
        android:id="@+id/a_detail_incomemoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/a_detail_shouru"
        android:layout_below="@+id/a_detail_jieyu"
        android:layout_marginLeft="7dp"
        android:textSize="16dp"
        android:text="1.00" />

    <TextView
        android:id="@+id/a_detail_fengefu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/a_detail_incomemoney"
        android:layout_below="@+id/a_detail_jieyu"
        android:layout_marginLeft="3dp"
        android:textSize="15dp"
        android:text="|" />

    <TextView
        android:id="@+id/a_detail_zhichu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/a_detail_fengefu"
        android:layout_below="@+id/a_detail_jieyu"
        android:layout_marginLeft="3dp"
        android:textSize="15dp"
        android:textColor="@color/colorgreen"
        android:text="支出" />
    <TextView
        android:id="@+id/a_detail_expendmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/a_detail_zhichu"
        android:layout_below="@+id/a_detail_jieyu"
        android:layout_marginLeft="7dp"
        android:textSize="16dp"
        android:text="11.20" />

    <ImageView
        android:id="@+id/a_detail_jiantou"
        android:layout_centerVertical="true"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"/>
</RelativeLayout>