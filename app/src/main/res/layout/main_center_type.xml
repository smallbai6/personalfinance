<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_center_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本日"
            android:textColor="@color/colorblack"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/main_center_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04月10日 - 04月30日"
            android:textSize="16dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/main_center_imageview"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:srcCompat="@mipmap/youjiantou" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/main_center_imageview"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_center_expendmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23.00"
            android:textColor="@color/colorgreen"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/main_center_incomemoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23.00"
            android:textColor="@color/colorred"
            android:textSize="20dp"  />
    </LinearLayout>


</RelativeLayout>